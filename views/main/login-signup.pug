extends ./layout.pug
block append stylesheet
    link(rel="stylesheet", href="stylesheets/login-signup.min.css")
block append script
    script(src="scrollreveal/dist/scrollreveal.min.js")
    script(src="javascripts/login-signup.js")
block content
    .container-fluid
        .row.vh-100.position-relative
            .col-md-6.bg-hidden#bg
                img(src="images/features-illustration-light.svg", alt="",style={width:'100%'})
                img(src="images/hero-media-illustration-light.svg", alt="",style={width:'100%'})
                img(src="images/cta-illustration-light.svg", alt="",style={width:'100%'})
                .content.text-center
                    h1.font-weight-bolder Xin Chào bạn
                    h5.mx-auto(style={width:'300px',padding:'30px 0'}).text-gray Nếu bạn chưa có tài khoản vui lòng đăng ký để tham gia với chúng tôi
                    label(for="switch")
                        p.mb-0 Đăng ký
                        input(type="checkbox", name="switch",id="switch",checked,hidden)
            .col-md-6.my-md-auto.my-5.login.d-md-block
                .form.text-center.my-auto
                    h1.mb-4 Đăng nhập
                    .form__link.d-flex
                        .form__link__icon
                            i.fab.fa-facebook-f
                        .form__link__icon
                            i.fab.fa-google
                    p.text-dark Hoặc sử dụng tài khoản của bạn:
                    .form__input
                        form(action="/login", method="get").d-flex.flex-column
                            .input.d-flex.mx-auto
                                i.far.fa-envelope
                                input(type="email", name="email",placeholder="Email hoặc Số điện thoại",required)
                            .input.d-flex.mx-auto
                                i.fas.fa-fingerprint
                                input(type="password", name="password",placeholder="Mật khẩu",required)
                            p Quên mật khẩu?
                            input(type="submit", value="Đăng nhập",style={padding:'15px 20px',width:'200px'}).mx-auto
            .col-md-6.my-md-auto.my-5.signup.d-md-block
                .form.text-center.my-auto
                    h1.mb-4 Đăng Ký
                    .form__link.d-flex
                        .form__link__icon
                            i.fab.fa-facebook-f
                        .form__link__icon
                            i.fab.fa-google
                    p.text-dark Hoặc đăng ký tài khoản của bạn:
                    .form__input
                        form(action="/signup", method="post").d-flex.flex-column
                            .input.d-flex.mx-auto
                                i.far.fa-user
                                input(type="text", name="username",placeholder="Họ và Tên",required)
                            .input.d-flex.mx-auto
                                i.far.fa-envelope
                                input(type="email", name="email",placeholder="Email",required)
                            .input.d-flex.mx-auto
                                select(name="role") Vai trò
                                    option(value="teacher") Giáo viên
                                    option(value="student") Học sinh
                            .input.d-flex.mx-auto
                                i.fas.fa-fingerprint
                                input(type="password", name="password",placeholder="Mật khẩu",required)
                            input(type="submit", value="Đăng ký",style={padding:'15px 20px',width:'200px'}).mx-auto