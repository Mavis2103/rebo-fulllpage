extends ../main/layout.pug
block append stylesheet
  link(rel='stylesheet', href='/st/stylesheets/style.min.css')
block content
  #loading-bg
      .loading
  section.container-fluid
    .row
      section#main.col-12.col-lg-10.bg-athens-gray.order-lg-2
        section.d-flex.justify-content-end.align-items-center.py-3
          #expand(onclick='toggle()')
            i.fas.fa-bars
          input#darkmode.mr-4.shadow(type='checkbox', name='')
          .ava-small.mr-4
            img.w-100.rounded-circle(src=`/st/images/dbImage/avatar/${userID}`, alt='')
          h3.mb-0.mr-3= username
          a(href="/logout").nav-link.px-2.py-1 Đăng xuất
        .time.text-secondary.mr-3.text-align-end
          span.hours 00
          | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;:
          span.minutes 00
          | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;:
          span.seconds 00
          | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;,Th&#x1EE9; 
          span.day
          |  ,
          span.date 00
          | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;/
          span.month 00
          | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;/
          span.year 0000
        .px-3
          main#content
      section#menu.d-none.d-lg-block.col-12.col-sm-4.col-lg-2.menu.border-right.order-lg-1
        .row.mt-3.mb-3.px-3
          .col-12.d-flex.align-items-center
            .logo
              img.w-100.rounded-circle(src='/st/images/appicon.png', alt='')
        .row
          .col-12
            ul.list-group
              label(for='dashboard')
                li.menu-item.list-group-item.border-0.py-3.d-flex.align-items-center.text-gray.pr-0.bg-clear
                  input#dashboard(type='radio', name='clicked', hidden='', checked='')
                  i.fas.fa-chart-bar
                  h5.mb-0.ml-3 T&#x1ED5;ng Quan
              mixin menuItem(idName,icon,title)
                label(for= idName)
                  li.menu-item.list-group-item.border-0.py-3.d-flex.align-items-center.text-gray.pr-0.bg-clear
                    input(id= idName,type='radio', name='clicked', hidden='')
                    i(class= icon)
                    h5.mb-0.ml-3= title
              +menuItem('classes','fas fa-chalkboard-teacher','Thư viện')
              +menuItem('lesson','far fa-edit','Bài học')
              +menuItem('tool','fas fa-tools','Công cụ')
              +menuItem('library','far fa-folder','Thư viện của tôi')
              +menuItem('profile','far fa-user-circle','Thông tin cá nhân')
              +menuItem('support','far fa-smile-beam','Quà tặng')
        .row.my-3
          .col-12
            .card.shadow-lg.border-0.rounded-15px
              .card-img-top
                img.w-100(src='/st/images/ef9c599507fc84d0f6538b72d15554b5-removebg-preview_1.png', alt='Mascot')

              .card-body.text-center
                h3.card-title
                  | Mời bạn bè
                p.card-text.text-gray
                  | Trải nghiệm cùng nhau. Nhân đôi điểm thưởng
                a.btn.btn-red.py-3.px-4.rounded-15px.font-weight-bolder.text-white(name='', id='', href='#', role='button') Mời bạn bè
      section.d-lg-none.col-sm-8.bg-athens-gray
block script
  script(src='/md/jquery/dist/jquery.min.js')
  script(src="/st/javascripts/darkmode.js",async)
  //- script(async, src='/md/chart.js/dist/Chart.min.js')
  //- script(src='js/bootstrap.bundle.min.js')
  script(src='/md/bootstrap/dist/js/bootstrap.min.js', async)
  script(src='/md/swiper/swiper-bundle.min.js')
  script(src='/st/javascripts/load.js', async)
  script(src='/st/javascripts/loading.js', async)
  script(src='/st/javascripts/event.js', defer)
  script(src='/st/javascripts/swiper.js')
